      // Remove staff -- Left
      $('#in-no-due-table tbody').on('click', '.in-staff-left', function (event) {
          var trig = $(this).parent().parent().get(0);
          var value = $(trig).trigger("click");
          var table = $('#in-no-due-table').DataTable();
          var row_value = table.row( value ).data();
          var param = row_value[0];
          var url = domain_url+"api/v1/users/remove/staff?staff_id="+param;
          jQuery.ajax({
            headers: {Authorization: token },
            url: url,
            type: 'GET',
            success: function(result) {
              console.log(result);
              $('#in-no-due-table').DataTable().clear();
              $("#in-no-due").trigger('click');
              $("#in-no-due").parent().addClass('active');
              $("#in-staff-left-msg").trigger('click');
          }
        });
      });
