      // Assign Librarian
      $('#in-no-due-table tbody').on('click', '.no-due-info', function (event) {
          var trig = $(this).parent().parent().get(0);
          var value = $(trig).trigger("click");
          var table = $('#in-no-due-table').DataTable();
          var row_value = table.row( value ).data();
          var param = row_value[0];
          var left_btn = $(this).next();
          console.log(left_btn);
          console.log(row_value);
          console.log(param);
          var url = domain_url+"api/v1/transactions/staff/issued_list?staff_id="+param;
          console.log(url);
          jQuery.ajax({
            headers: {Authorization: token },
            url: url,
            type: 'GET',
            success: function(result) {
              console.log(result);
              if (result['count'] > 0) {
                console.log("issued");
                $("#in-no-due-msg").trigger("click");
              }
              else {
                console.log("zero");
                // Generate No Due Form
                var docDefinition = {
                                info :{
                                  title: row_value[1],
                                },
                                content: [{
                                    			text: 'DEPARTMENT OF MATHEMATICS',
                                    			style: 'header'
                                    		},'',
                                        {
                                    			text: 'ANNA UNIVERSITY, CHENNAI - 25',
                                    			style: 'subheader'
                                    		},'',
                                        {
                                          text: 'NO DUES CERTIFICATE',
                                          style: 'title'
                                        },'',
                                        {
                                          // '\u0009',
                                    			text: ['This is to certify that the Department Library has ‘NO DUES’ against', " ",row_value[1],", ",row_value[3],"." ],
                                    			style: 'statement'
                                        },'',
                                         {
                                            text: 'This is for your kind information and necessary action please.',
                                            style: 'substatement'
                                          },'',
                                           {
                                              text: 'Library Incharge',
                                              style: 'seal',
                                            },'',
                                            {
                                              text: '(Name & Seal)',
                                              style: 'subseal',
                                            }
                                        ],
                                styles: {
                                    		header: {
                                    			fontSize: 18,
                                    			bold: true,
                                          alignment: 'center',
                                          margin: [0, 190, 0, 10]
                                    		},
                                        subheader: {
                                    			fontSize: 18,
                                    			bold: true,
                                          alignment: 'center',
                                          margin: [0, 0, 0, 50]
                                    		},
                                    		title: {
                                    			fontSize: 15,
                                    			bold: true,
                                          alignment: 'center',
                                          decoration: 'underline',
                                          margin: [0, 0, 0, 50]
                                    		},
                                    		statement: {
                                          fontSize: 12,
                                          alignment: 'justify',
                                          margin: [20, 0, 40, 10],
                                    		},
                                        substatement: {
                                          fontSize: 12,
                                          alignment: 'justify',
