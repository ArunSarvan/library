      $(document).ready(function(){
        searchBooks();
        hodLibIncharge();
      });

      // Assign Librarian
      $('#hod-lib-incharge-table tbody').on('click', '.assign-librarian', function (event) {
          var trig = $(this).parent().parent().get(0);
          var value = $(trig).trigger("click");
          var table = $('#hod-lib-incharge-table').DataTable();
          var row_value = table.row( value ).data();
          var param = row_value[0];
          var url = domain_url+"api/v1/users/assign/librarian?staff_id="+param;
          jQuery.ajax({
            headers: {Authorization: token },
            url: url,
            type: 'GET',
            success: function(result) {
              console.log(result);
              $('#hod-lib-incharge-table').DataTable().clear();
              $("#hod-staff-sel").trigger('click');
              $("#hod-staff-sel").parent().addClass('active');
          }
        });
      });

      // Remove Librarian
